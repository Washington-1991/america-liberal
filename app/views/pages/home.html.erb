 <%# noticia principal de argentina %>
  <div class="noticia-principal-container">

    <div class="noticia-principal-title">
      <%= image_tag "eeuu.png" %>
      <a href="/eeuu">Andrew Olivastro en argentina</a>
    </div>

    <div class="noticia-principal-img">
      <img src="https://res.cloudinary.com/dcfmvazgl/image/upload/v1724755906/America%20Liberal/Septiembre%202024/27082024-1_uqgc36.png" alt="">
